        <%#= f.hidden_field(current_user, 'standard' => params[:role]) %>  
        <%= hidden_field_tag 'user[role]', 'standard' %> 
        <%= f.submit "Downgrade Account", class: 'btn btn-warning' %> 
      </div>

      <% end %>
    </div>
  </div>