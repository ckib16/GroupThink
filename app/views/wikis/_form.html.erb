  <div class="row">
    <div class="col-md-8">

      <%= form_for(@wiki) do |f| %>

        <% if @wiki.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>

            <ul>
            <% @wiki.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki title" %>
        </div>

        <div class="form-group">
          <%= f.label :body %><br>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Wiki text" %>
        </div>

        <% if current_user.role == 'admin' || current_user.role == 'premium' %>
          <div class="form-group">
            <%= f.label :private, class: 'check_box' do %>
            <%= f.check_box :private %> Private Wiki
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>

      <% end %>

      <% if @wiki.private? %>
        <h2>Manage Collaborators</h2>

        <table class="table table-hover">
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.name %>
              </td>
              <td>
                <% if @wiki.users.include?(user) %>
                  <%= link_to "Remove Collaborator", wiki_collaborator_path(@wiki, @wiki.collaborator_for(user)), method: :delete, class: "btn btn-danger" %>
                <% else %>
                  <%= link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: "btn btn-success" %>
                <% end %>

              </td>
            </tr>
          <% end %>
        </table>
      <% end %>


    </div>
  </div>


